<div class="contents row">
  <div class="container">
    <%= form_with(model: @todo, local: true) do |f| %>
      <h3>
        Todo登録
      </h3>
      <%= f.text_field :name, placeholder: "タスク名を記入" %>
      <%= f.text_area :comment, placeholder: "タスク詳細を記入"%>
      <%= f.number_field :quote, class: "poms", min: 1, max: 20 %>
      <p class=pomodoro_quote>ポモドーロ（予測）</p>
      <%= f.submit "登録", class: "reg-btn" %>
    <% end %>
  </div>
</div>
<div class= "contents row">
  <h2 class="menu">Todo一覧</h2>
  <% @todos.each do |todo| %>
    <div class="container">
      <div class="content_post">
        <div class="more">
          <span class="fas fa-bars"></span>
          <ul class="more_list">
            <li>
              <%= link_to 'ポモドーロGO(未完成)', pomodoro_todo_path(todo.id) %>
            </li>
            <li>
              <%= link_to '編集', edit_todo_path(todo.id) %>
            </li>
            <li>
              <%= link_to '削除', todo_path(todo.id), method: :delete, data: {confirm: "削除しますか？"} %>
            </li>
          </ul>
        </div>
      </div>
      <p class="todo_title">タスク名</p>
      <p class="todo"><%= todo.name %></p>
      <p class="todo_title">タスク詳細</>
      <p class="todo"><%= simple_format(todo.comment) %></p>
      <p class="pomodoro_quote"><%= todo.quote %></p>
      <p class="pomodoro_quote">ポモドーロ（予測）</p>
      
    </div>
  <% end %>
</div>