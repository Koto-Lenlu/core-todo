<div class="contents row">
  <div class="container">
    <%= form_with(model: @todo, local: true) do |f| %>
      <h3>
        Todo登録
      </h3>
      <%= f.text_field :name, placeholder: "タスク名を記入" %>
      <%= f.text_area :comment, placeholder: "タスク詳細を記入"%>
      <%= f.number_field :quote, class: "poms", min: 1, max: 20 %>
      ポモドーロ
      <%= f.submit "登録" %>
    <% end %>
  </div>
</div>

<div class= "contents row">
  <h2 class="menu">Todo一覧</h2>
  <div class="todo_list">
    <% @todos.each do |todo| %>
      <div class="container">
        <ul>
        <p class="destroy_btn">
          <%= link_to '削除', todo_path(todo.id), method: :delete, data: {confirm: "削除しますか？"} %>
        </p>
        <p>タスク名</p>
        <p class="todo"><%= todo.name %></p>
        <p>タスク詳細</p>
        <p class="todo"><%= simple_format(todo.comment) %></p>
      
      </div>
    <% end %>
  </div>
</div>
